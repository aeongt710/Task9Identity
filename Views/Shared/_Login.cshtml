@inject Microsoft.AspNetCore.Identity.SignInManager<ApplicationUser> signInManager


<ul class="navbar-nav">
    @if (signInManager.IsSignedIn(User))
    {
        <div class="text-decoration-none p-1 nav-link text-dark">Hello @User.Identity.Name</div>
        <div class="dropdown">
            <button class="btn  dropdown-toggle" style="background-color:none;" type="button" id="dropdownMenuButton" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                My Account
            </button>
            <div class="dropdown-menu " aria-labelledby="dropdownMenuButton">
                <a asp-action="ResetPassword" asp-controller="Account" class="text-decoration-none p-1 nav-link text-dark">Reset Password</a>
                <form id="logoutForm" asp-action="Logout" class="class=" text-decoration-none p-1 nav-link text-dark"" method="post" asp-controller="Account">
                    @*<div class="text-decoration-none p-1 nav-link text-dark">Hello @User.Identity.Name</div>*@
                    <a href="javascript:document.getElementById('logoutForm').submit()" class="text-decoration-none p-1 nav-link text-dark">Logout</a>
                </form>

            </div>
        </div>
    }
    else
    {
        <div class="dropdown">
            <button class="btn  dropdown-toggle" style="background-color:none;" type="button" id="dropdownMenuButton" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                Login
            </button>
            <div class="dropdown-menu " aria-labelledby="dropdownMenuButton">
                <a asp-action="Login" asp-controller="Account" class="text-decoration-none p-1 nav-link text-dark">Login</a>
                <a asp-action="Register" asp-controller="Account" class="text-decoration-none p-1 nav-link text-dark">Register</a>
            </div>
        </div>
    }
</ul>
<style>
    .checker {
        padding-top: 7px;
    }

    .dropdown:hover > .dropdown-menu {
        display: block;
    }

    .nav-link_color:hover {
        background-color: rgb(0 0 0 / 10%);
    }

    .dropdown > .dropdown-toggle:active {
        /*Without this, clicking will make it sticky*/
        pointer-events: none;
    }
</style>